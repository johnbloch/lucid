// component: basic packet forwarding
fun port fwd(int dst_ip) {
  if(dst_ip > 10){
    if(dst_ip < 15){
      return 1;
    }else{
      return 2;
    }
  }else{
    if(dst_ip < 5){
      return 3;
    }else{
      return 4;
    }
  }
}
handle ip_pkt(int src_ip, int dst_ip) {
    int out_port = get_output_port(src_ip, dst_ip, ingress_port);
    generate_port(out_port, ip_pkt(src_ip, dst_ip));
}
